<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:card_resource_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_resource_view"
    android:layout_margin="4dp"
    card_resource_view:cardElevation="2dp"
    card_resource_view:cardCornerRadius="4dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/resourceImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                card_resource_view:srcCompat="@drawable/wood_resource" />

            <TextView
                android:id="@+id/resourceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wood"
                android:textSize="18sp" />

            <Button
                android:id="@+id/resourceMinusMBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="--" />

            <Button
                android:id="@+id/resourceMinusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />

            <TextView
                android:id="@+id/resourceAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  "
                android:textAlignment="center"
                android:textSize="24sp" />

            <Button
                android:id="@+id/resourcePlusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+" />

            <Button
                android:id="@+id/resourcePlusPBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="++" />

            <Button
                android:id = "@+id/clearBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear" />
        </LinearLayout>

    </HorizontalScrollView>

</android.support.v7.widget.CardView>
